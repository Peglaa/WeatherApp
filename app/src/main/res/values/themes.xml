<resources >
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/midnight_blue_dark</item>
        <item name="colorOnPrimary">@color/snow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="screenBackground">
        <item name="android:background">@color/snow</item>
    </style>

    <style name="recyclerItemBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/snow</item>
        <item name="android:backgroundTint">@color/royal_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="BaseImageView" >
        <item name="android:tint">@color/midnight_blue</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BaseText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/midnight_blue</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BaseDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/midnight_blue</item>
    </style>

    <style name="DailyWeatherCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/card_stroke_width</item>
        <item name="cardCornerRadius">@dimen/daily_pager_corner_radius</item>
        <item name="strokeColor">@color/midnight_blue_dark</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CurrentWeatherCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/card_stroke_width</item>
        <item name="cardCornerRadius">@dimen/current_weather_card_corner_radius</item>
        <item name="strokeColor">@color/midnight_blue_dark</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BaseProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/midnight_blue</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="customBottomViewIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_blue_20</item>
    </style>

    <style name="bottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="backgroundTint">@color/white</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="itemActiveIndicatorStyle">@style/customBottomViewIndicator</item>
    </style>

    <style name="BaseToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/royal_blue</item>
        <item name="titleTextColor">@color/snow</item>
    </style>

    <style name="BaseIndicatorDots">
        <item name="dotsSize">@dimen/indicator_dots_size</item>
        <item name="dotsColor">@color/midnight_blue_dark</item>
        <item name="dotsSpacing">@dimen/indicator_dots_spacing</item>
        <item name="dotsStrokeWidth">@dimen/indicator_dots_stroke_width</item>
        <item name="dotsStrokeColor">@color/gray</item>
    </style>

    <style name="DailyDetailsCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/card_stroke_width</item>
        <item name="cardCornerRadius">@dimen/daily_details_card_corner_radius</item>
        <item name="strokeColor">@color/midnight_blue_dark</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToggleMaterialButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/material_group_button_colors</item>
        <item name="android:textColor">@color/material_group_button_text_colors</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/midnight_blue</item>
    </style>

    <style name="SettingsTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/midnight_blue</item>
    </style>
</resources>